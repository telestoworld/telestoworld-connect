{
  "extends": [
    "tw-tslint-config-standard",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "no-commented-out-code": false,
    "prettier": [
      true,
      {
        "printWidth": 80,
        "singleQuote": true,
        "semi": false
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "strict-type-predicates": false,
    "ter-indent": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "./**/*.js"
    ]
  }
}